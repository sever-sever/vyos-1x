<?xml version="1.0"?>
<!-- Policy prefix-lists -->
<interfaceDefinition>
  <node name="npolicy">
    <children>
      <tagNode name="prefix-list">
        <properties>
          <help>Prefix list name</help>
        </properties>
        <children>
          <leafNode name="description">
            <properties>
              <help>Description for this prefix-list</help>
              <valueHelp>
                <format>&lt;text&gt;</format>
                <description>Description for this prefix-list</description>
              </valueHelp>
            </properties>
          </leafNode>
          <tagNode name="rule">
            <properties>
              <help>Rule for this prefix-list</help>
              <valueHelp>
                <format>1-65535</format>
                <description>Prefix-list rule number</description>
              </valueHelp>
              <constraint>
                <validator name="numeric" argument="--range 1-65535"/>
              </constraint>
            </properties>
            <children>
              <leafNode name="action">
                <properties>
                  <help>Action to take on prefixes matching this rule [REQUIRED]</help>
                  <valueHelp>
                    <format>permit</format>
                    <description>Permit matching prefixes</description>
                  </valueHelp>
                  <valueHelp>
                    <format>deny</format>
                    <description>Deny matching prefixes</description>
                  </valueHelp>
                  <completionHelp>
                    <list>permit deny</list>
                  </completionHelp>
                </properties>
              </leafNode>
              <leafNode name="description">
                <properties>
                  <help>Description for this rule</help>
                  <valueHelp>
                    <format>&lt;text&gt;</format>
                    <description>Description for this rule</description>
                  </valueHelp>
                </properties>
              </leafNode>
              <leafNode name="ge">
                <properties>
                  <help>Prefix length to match a netmask greater than or equal to it</help>
                  <valueHelp>
                    <format>0-32</format>
                    <description>Netmask greater than length</description>
                  </valueHelp>
                  <constraint>
                    <validator name="numeric" argument="--range 0-32"/>
                  </constraint>
                </properties>
              </leafNode>
              <leafNode name="le">
                <properties>
                  <help>Prefix length to match a netmask less than or equal to it</help>
                  <valueHelp>
                    <format>0-32</format>
                    <description>Netmask less than length</description>
                  </valueHelp>
                  <constraint>
                    <validator name="numeric" argument="--range 0-32"/>
                  </constraint>
                </properties>
              </leafNode>
              <leafNode name="prefix">
                <properties>
                  <help>Prefix to match</help>
                  <valueHelp>
                    <format>ipv4net</format>
                    <description>Prefix to match against</description>
                  </valueHelp>
                  <constraint>
                    <validator name="ip-prefix"/>
                  </constraint>
                </properties>
              </leafNode>
            </children>
          </tagNode>
        </children>
      </tagNode>
    </children>
  </node>
</interfaceDefinition>
